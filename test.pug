    //-   .container.my-3
    .row
        .col-12
            +box-head("Sản phẩm nổi bật")
    .row
        each item in productsFeatured
            .col-4.mb-3
                .product-item
                    .inner-image
                        img(
                            src=item.thumbnail, a
                            lt=item.title
                        )
                        if(item.featured === "1")
                            .inner-featured nổi bật
                    .inner-content
                        a(
                            href= `/products/detail/${item.slug}`
                            class="inner-title"
                        ) #{item.title} 
                        .inner-price-new #{item.newPrice}$
                        .inner-price-old #{item.price}$
                        .inner-discount -#{item.discountPercentage}%   