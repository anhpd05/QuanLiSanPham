                        //- section.container-lg.bg-white.d-flex.flex-column.mb-3.p-3.rounded
            // Giới thiệu
            section.intro
                .row
                    .col-md-12.text-center
                        h2 Chào mừng đến với Thế giới Điện thoại!
                        p Tại đây, chúng tôi mang đến cho bạn những chiếc điện thoại thông minh mới nhất, công nghệ tiên tiến và trải nghiệm tuyệt vời. Khám phá ngay hôm nay!

                // Jumbotron (khuyến mãi)
            .jumbotron.text-center
                h2 Siêu ưu đãi điện thoại!
                p Giảm giá sốc lên đến 30% cho các dòng điện thoại mới nhất.

            // Sản phẩm nổi bật
            section.featured-products
                .row
                    .col-12
                        +box-head("Sản phẩm nổi bật")
                .row
                    each item in productsFeatured
                        .col-4.mb-3
                            .product-item
                                .inner-image
                                    img( 
                                        href= `/products/detail/${item.slug}`
                                        src=item.thumbnail, a
                                        lt=item.title
                                    )
                                    if(item.featured === "1")
                                        .inner-featured nổi bật
                                .inner-content
                                    a(
                                        href= `/products/detail/${item.slug}`
                                        class="inner-title"
                                    ) #{item.title} 
                                    //- div !{item.description}
                                    .inner-price-new !{item.newPrice}$
                                    .inner-price-old #{item.price}$
                                    .inner-discount -#{item.discountPercentage}%   
            // Sản phẩm mới nhất
            section.new-products
                .row
                    .col-12
                        +box-head("Sản phẩm mới nhất")
                .row
                    each item in productNew
                        .col-4.mb-3
                            .product-item
                                .inner-image
                                    img( 
                                        href= `/products/detail/${item.slug}`
                                        src=item.thumbnail, a
                                        lt=item.title
                                    )
                                    
                                .inner-content
                                    a(
                                        href= `/products/detail/${item.slug}`
                                        class="inner-title"
                                    ) #{item.title} 
                                    //- div !{item.description}
                                    .inner-price-new !{item.newPrice}$
                                    .inner-price-old #{item.price}$
                                    .inner-discount -#{item.discountPercentage}%   
            // Thương hiệu nổi tiếng
            section.brands
                h2 Thương hiệu nổi tiếng
                .row
                    .col-md-2
                        a(href="/products/iphone", class="logo-link")
                            img(src="/images/logoA.png", alt="Apple", style="border-radius: 10px;" )
                    .col-md-2
                        a(href="/products/samsung", class="logo-link")
                            img(src="/images/loggoS.jpeg", alt="Samsung" , style="border-radius: 10px;")
                    .col-md-2 
                        a(href="/products/xiaomi", class="logo-link")
                            img(src="/images/logoX.jpg", alt="XiaoMi" , style="border-radius: 10px;")
                    .col-md-2
                        a(href="/products/oppo", class="logo-link")
                            img(src="/images/logoO.png", alt="Samsung" , style="border-radius: 10px;")
                    .col-md-2
                        a(href="/products/iphone", class="logo-link")
                            img(src="/images/logoA.png", alt="Apple", style="border-radius: 10px;" )
                    .col-md-2
                        a(href="/products/oppo", class="logo-link")
                            img(src="/images/logoR.png", alt="Samsung" , style="border-radius: 10px;" width="90%")

            // Tin tức và khuyến mãi
            section.news-promotions
