extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/box-head.pug

block main
  +alert-error(5000)

  .container.my-3
    .row
      .col-12
        +box-head(`Kết quả tìm kiếm: ${keyword}`)

    .row
      each item in products
        .col-4.mb-3
          .product-item
            .inner-image
              img(
                src=item.thumbnail ,
                alt=item.title
              )
              if(item.featured === "1")
                .inner-featured nổi bật
            .inner-content
              a(
                href=`/products/detail/${item.slug}`
                class="inner-title"
              ) #{item.title}
              .inner-price-new #{item.priceNew}$
              .inner-price-old #{item.price}$
              .inner-discount -#{item.discountPercentage}%