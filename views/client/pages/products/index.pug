extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

//- block main 
//-   h1 Hello mọi người đây là trang sản phẩm
block main
  +alert-error(5000)
  +alert-success(5000)
  .container.my-3
    .row
      .col-12
        +box-head("Danh sách sản phẩm ")
    .row
      each item in products
        .col-4.mb-3
          .product-item
            .inner-image
              img(
                src=item.thumbnail ,
                alt=item.title
              )
              if(item.featured === "1")
                .inner-featured nổi bật
            .inner-content
              a(
                href=`/products/${item.slug}`
                class="inner-title"
              ) #{item.title}
              .inner-price-new #{item.priceNew}$
              .inner-price-old #{item.price}$
              .inner-discount -#{item.discountPercentage}%
  