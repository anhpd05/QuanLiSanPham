include ../mixins/sub-menu.pug
header.header
  .container
    .row.align-items-center
      .col-2
        .inner-logo
          a(href="/")
            img(src="/images/TechStore-Logo.png", alt="Logo")
      if(user)
        .col-5 
          form(
            action="/search"
            method="GET"
          ) 
            div(class="form-group d-flex mb-0")
              input(
                type="text"
                placeholder="Nhập từ khóa..."
                class="form-control"
                name="keyword"
                value= keyword
              )
              button(
                type="submit"
                class="btn btn-primary ml-2"
              ) Tìm
        .col-5
          .inner-menu
            ul
              li
                a(href="/") Trang chủ
              li(class="sub-menu")
                - const pathProduct = "/products"
                a(href="/products") Sản phẩm
                +sub-menu(layoutHeaderProductCategory,pathProduct)
              li
                a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0})
                
              li 
                a(href="/user/logout") Đăng Xuất

      else 
        .col-4
          form(
            action="/search"
            method="GET"
          ) 
            div(class="form-group d-flex mb-0")
              input(
                type="text"
                placeholder="Nhập từ khóa..."
                class="form-control"
                name="keyword"
                value= keyword
              )
              button(
                type="submit"
                class="btn btn-primary ml-2"
              ) Tìm
        .col-6
          .inner-menu
            ul
              li
                a(href="/") Trang chủ
              li(class="sub-menu")
                - const pathProduct = "/products"
                a(href="/products") Sản phẩm
                +sub-menu(layoutHeaderProductCategory,pathProduct)
              li
                a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0})
                
              li  
                a(href="/user/register") Đăng ký
              li 
                a(href="/user/login") Đăng nhập               