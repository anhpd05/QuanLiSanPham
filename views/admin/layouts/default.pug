doctype html
html
  head
    title #{pageTitle}
    //- title Techstore admin

    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")

    link(rel="stylesheet", href="/admin/css/style.css")

    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
    link(rel='stylesheet' href='https://getbootstrap.com/docs/4.0/examples/dashboard/dashboard.css')
    body 
      //- Header
      if(role.permissions.length > 0)
        include ../partials/header.pug
        //- Silder bar and main content
        .container-fluid
          .row
            //sidebar
            include ../partials/slider.pug
            //main content
            main.col-md-9.ml-sm-auto.col-lg-10.pt-3.px-4(role='main')
              block main
            
            
        //- TinyMCE
        script(src="/tinymce/tinymce.min.js") 
        script(src="/admin/js/tinymce-config.js") 
        //- End TinyMCE

        //- jQuery first, then Popper.js, then Bootstrap JS
        script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
        //- Icons
        script(src='https://unpkg.com/feather-icons/dist/feather.min.js')

        script.
          feather.replace()

        script(src="/admin/js/script.js") 
        script(src="/admin/js/product.js") 
        script(src="/js/script.js") 
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js") 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js") 
      else
        h1 Bạn không có quyền truy cập!